---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/contact",
    "url": "https://screwfast.uk/contact",
    "name": "Contactanos | Lex Fortis",
    "description":
      "¿Tiene preguntas o quiere discutir un caso con nosotros? Comuníquese y creemos la solución perfecta con nuestros servicios.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://screwfast.uk",
      "name": "Lex Fortis",
      "description":
        "Defendemos sus derechos con pasión y compromiso",
    },
    "inLanguage": "es-US"
  }}
>
  <ContactSection />
</MainLayout>
